{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": false,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node"],
    "stripInternal": true,
    "noImplicitThis": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
	"typeAcquisition": {
		"enable": true
	}
}
